<!-- views/posts.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All Posts</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f4f4f4;
      margin: 0;
      padding: 20px;
    }

    .container {
      max-width: 800px;
      margin: 0 auto;
      background-color: #fff;
      border-radius: 5px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      padding: 20px;
    }

    h1 {
      font-size: 24px;
      margin-bottom: 20px;
    }

    .post {
      position: relative; /* Enable relative positioning for button placement */
      background-color: #f9f9f9;
      border-radius: 5px;
      padding: 20px;
      margin-bottom: 20px;
    }

    .post-content {
      margin-top: 10px;
    }

    .post-info {
      font-size: 14px;
      color: #666;
    }

    .post-info span {
      font-weight: bold;
      color: #333;
    }

    .action-buttons {
      position: absolute;
      top: 10px;
      right: 10px;
    }

    .action-buttons button {
      margin-left: 5px;
    }

    .edit-button {
      background-color: #28a745;
      color: #fff;
      border: none;
      border-radius: 5px;
      padding: 5px 10px;
      cursor: pointer;
    }

    .delete-button {
      background-color: #dc3545;
      color: #fff;
      border: none;
      border-radius: 5px;
      padding: 5px 10px;
      cursor: pointer;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>All Posts</h1>
    <% posts.forEach(post => { %>
        <div class="post">
            <div class="action-buttons">
              <button class="edit-button">Edit</button>
              <button class="delete-button" data-post-id="<%= post._id %>">Delete</button>
            </div>
        <p class="post-content"><%= post.content %></p>
        <p class="post-info">Posted by <span><%= post.username %></span> on <%= new Date(post.createdAt).toLocaleString() %></p>
      </div>
      
    <% }); %>
  </div>
</body>
</html>


<script>
    document.addEventListener('DOMContentLoaded', () => {
      const deleteButtons = document.querySelectorAll('.delete-button');
      deleteButtons.forEach(button => {
        button.addEventListener('click', () => {
          const postId = button.dataset.postId;
          if (confirm('Are you sure you want to delete this post?')) {
            fetch(`/delete/${postId}`, {
              method: 'DELETE'
            })
            .then(response => {
              if (response.ok) {
                // Post deleted successfully, refresh the page or update UI as needed
                window.location.reload(); // Refresh the page
              } else {
                // Handle error response
                console.error('Error deleting post:', response.statusText);
              }
            })
            .catch(error => {
              console.error('Error deleting post:', error);
            });
          }
        });
      });
    });
  </script>
